<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    <com.kitzapp.telegram_stats.presentation.ui.components.TTotalLinLayout
            android:id="@+id/totalLayoutPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

        <com.kitzapp.telegram_stats.presentation.ui.components.TSimpleTextView
                android:id="@+id/simpleTextPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="2dp"
                android:maxLines="1"/>

        <LinearLayout
                android:id="@+id/containerPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

    </com.kitzapp.telegram_stats.presentation.ui.components.TTotalLinLayout>

</LinearLayout>
