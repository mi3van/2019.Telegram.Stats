<?xml version="1.0" encoding="utf-8"?>
<com.kitzapp.telegram_stats.customViews.simple.TColorfulLinLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/totalLayoutPopup"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:minWidth="170dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/popup_background"
        android:clickable="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.kitzapp.telegram_stats.customViews.simple.TColorfulTextView
                android:id="@+id/titleTextPopup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"/>

        <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/detailed_title"
                android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/containerPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

</com.kitzapp.telegram_stats.customViews.simple.TColorfulLinLayout>
